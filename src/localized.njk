---

title: Daily Breifing
layout: base.njk

pagination:
  data: news
  size: 1
  alias: news
permalink: /{{ news.country }}/index.html

---

<div class="container">
    <h1>This is a page for you</h1>
    <div class="vibe">You are great!</div>
    <div class="love">
      ❤️
    </div>


    
  
    <div id="weather" class="hidden">

      <h2>Weather near you</h2>

        <p id="city"></p>
        <p id="temp"></p>
        <p id="main"></p>
        <p id="desc"></p>


    </div>
   


    <h2>News in your country</H2>
    <ul>
    {% for article in news.articles %}

      <li>

        <a href={{ article.url }}><h2>{{ article.title }}</h2></a>
        <span>{{ article.source.name }} - <time>{{ article.publishedAt }} </time></span>

      </li>
    {% endfor %}
    </ul>

  </div>
  <script src="/js/vibes.js"></script>
  <script src="/js/weather.js"></script>
</div>